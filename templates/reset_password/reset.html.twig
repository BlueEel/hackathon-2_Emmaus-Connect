{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe
{% endblock %}

{% block body %}
	<div class="container">
		<class="row">
			<h1 class="text-center text-dark">Réinitialiser votre mot de passe</h1>

			{{ form_start(resetForm, {'attr': {'class': 'form-control
                            text-light m-auto w-50 border-0'}})  }}
			{{ form_widget(resetForm.plainPassword, {'attr': {'class': 'text-dark'}}) }}
			<div class="text-center m-2">
				<button class="btn btn-success">Réinitialiser le mot de passe</button>
			</div>
			{{ form_end(resetForm) }}
		</div>
	</div>
{% endblock %}
