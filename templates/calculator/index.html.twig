{% extends 'base.html.twig' %}

{% block title %}Calculator{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

	<div class="container">
		<div class="row">
			<div class="col-4 offset-4">
				<div class="card m-auto bg-secondary align-items-center">
					<div class="card-body w-75">
						<h4 class="card-title text-center">Estimer le prix de mon téléphone: </h4>
						{{ form_errors(CalculatorForm, {'attr': {'class': 'bg-primary'}}) }}
						{{ form_start(CalculatorForm) }}
						<div class="form-group mb-2">
							{{ form_row(CalculatorForm.brand, {'attr': {'class': 'form-control
                             w-100'}}) }}
						</div>
						<div class="form-group mb-2">
							{{ form_row(CalculatorForm.modele, {'attr': {'class': 'form-control
                            w-100'}}) }}
						</div>
						<div class="form-group mb-2">
							{{ form_row(CalculatorForm.internalmemory, {'attr': {'class': 'form-control
                            '}}) }}
						</div>
						<div class="form-group mb-2">
							{{ form_row(CalculatorForm.ram, {'attr': {'class': ' ms-2'}}) }}
						</div>
                        <div class="form-group mb-2">
							{{ form_row(CalculatorForm.releaseYear, {'attr': {'class': ' ms-2'}}) }}
						</div>
                        <button type="submit" class="btn btn-success  ms-auto me-auto mt-3"> Estimer </button>
	{{ form_end(CalculatorForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
